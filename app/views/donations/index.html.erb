<p id="notice"><%= notice %></p>

<h1>Donations</h1>

<table>
  <thead>
    <tr>
      <th>Request</th>
      <th>Artist</th>
      <th>Artist name</th>
      <th>Artist website</th>
      <th>Artist facebook</th>
      <th>Artist twitter</th>
      <th>Artist bandcamp</th>
      <th>Artist instagram</th>
      <th>Artist snapchat</th>
      <th>Amount</th>
      <th>Comment</th>
      <th>Youtube video</th>
      <th>Youtube error code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.request %></td>
        <td><%= donation.artist_id %></td>
        <td><%= donation.artist_name %></td>
        <td><%= donation.artist_website %></td>
        <td><%= donation.artist_facebook %></td>
        <td><%= donation.artist_twitter %></td>
        <td><%= donation.artist_bandcamp %></td>
        <td><%= donation.artist_instagram %></td>
        <td><%= donation.artist_snapchat %></td>
        <td><%= donation.amount %></td>
        <td><%= donation.comment %></td>
        <td><%= donation.youtube_video_id %></td>
        <td><%= donation.youtube_error_code %></td>
        <td><%= link_to 'Show', donation %></td>
        <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
        <td><%= link_to 'Destroy', donation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donation', new_donation_path %>
